<%= turbo_frame_tag dom_id(color), class: 'ps-4' do %>
<%= bootstrap_form_with(model: [:admin, color], class: 'row') do |form| %>
  <%= form.text_field :name, wrapper_class: 'col-md-4' %>
  <div class="col align-self-end text-end">
    <%= form.primary class: 'ms-auto btn btn-primary' %>
    <%= link_to 'Cancel', admin_color_path(color), class: 'btn btn-outline-secondary ms-1' if color.persisted? %>
  </div>
<%- end -%>
<%- end -%>
