<%= turbo_frame_tag dom_id(shape) do %>
  <div class="d-inline-block handle"></div>
  <div class="d-inline-block py-2">
    <%= shape.name %>
    <%= shape.customize? ? tag.span('Custom Text', class: 'custom') : '' %>
    <%= tag.span humanized_money_with_symbol(shape.price), class: 'price' %>
  </div>
  <div class="d-inline-block float-end">
    <%= link_to 'Edit', edit_admin_shape_path(shape), class: 'btn btn-outline-secondary' %>
    <%= button_to "Delete", admin_shape_path(shape), method: :delete, form_class: 'd-inline', class: 'btn btn-secondary', form: { data: { turbo_confirm: "Are you sure?" } } %>
  </div>
<%- end -%>
